<% if (typeof message !== 'undefined' && message) { %>
    <style>
    .error-message {
        background-color: #ffebee;
        color: #d32f2f;
        border: 1px solid #d32f2f;
        padding: 10px;
        border-radius: 5px;
        font-size: 14px;
        margin-bottom: 15px;
        text-align: center;
        font-weight: bold;
    }
    </style>
    <div class="error-message">
        <%= message %>
    </div>
<% } %>