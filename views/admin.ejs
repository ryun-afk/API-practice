<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Dashboard</title>
        <%- include('partials/head') %>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <%- include('partials/sidebar') %>
        <header>
            <h1>User Data</h1>            
        </header>
        
        <div class = 'content'>
            <% if (users === 'empty') { %>
                <p>No users available.</p>
            <% } else { %>
                <table class="course-table">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.first_name %></td>
                            <td><%= user.last_name %></td>
                            <td><%= user.role %></td>
                        </tr>
                    <% }); %>
                </tbody>
            <% } %>
        </div>
    </body>
</html>